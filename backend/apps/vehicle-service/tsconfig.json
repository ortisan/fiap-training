{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@adapter/*": ["./adapters/*"],
      "@cmd/*": ["./cmd/*"],
      "@domain/*": ["./domain/*"],
      "@function/*": ["./function/*"],
      "@usecase/*": ["./usecase/*"]
    }
  }
}